<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

           <RelativeLayout
               android:padding="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/user_img"
                android:src="@drawable/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@id/user_img"
                android:id="@+id/txv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Apple MacBook Air Core i5 5tasdasdasdasdasdasdasdasdasdasdasdasdasdh Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" />



            <TextView
                android:layout_below="@id/txv_comment"
                android:layout_alignParentRight="true"
                android:id="@+id/txv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Максат Алмасов"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_below="@id/user_img"
                android:id="@+id/txv_rait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="4.7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@id/txv_mail"
                android:id="@+id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text=" 24.05.2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

           </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>